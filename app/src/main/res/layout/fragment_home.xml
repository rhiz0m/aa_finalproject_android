<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false"
    app:defaultNavHost="true"
    app:navGraph="@navigation/nav_graph"
    tools:context=".view.HomeFragment">

    <io.github.florent37.shapeofview.shapes.CutCornerView
        android:id="@+id/ccw_quotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="4dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:shape_cutCorner_bottomRightSize="16dp"
        app:shape_cutCorner_topLeftSize="32dp"
        app:shape_cutCorner_topRightSize="8dp"
        >

        <LinearLayout
            android:id="@+id/fl_textFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#F4B17D"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_quotes_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="2dp"
                android:background="#000"
                android:elegantTextHeight="true"
                android:fontFamily="monospace"
                android:padding="8dp"
                android:text="The world keeps happening, in accordance with its rules; it's up to us to make sense of it and give it value."
                android:textColor="#FDF1DF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_author_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="48dp"
                android:fontFamily="@font/advent_pro_medium"
                android:paddingLeft="16dp"
                android:paddingBottom="8dp"
                android:text="Sean Michael Carroll"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>
    </io.github.florent37.shapeofview.shapes.CutCornerView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/spacegirl_bg" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gradient_background" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="449dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:src="@drawable/speak_notes_24"
        app:backgroundTint="@color/lightgreen" />

</FrameLayout>