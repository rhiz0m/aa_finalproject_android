<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_navBar_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/gradient_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:hint=""
            android:textAlignment="center"
            android:textColorHint="@color/custom_pink_200"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/users_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STI 2023"
            android:layout_marginLeft="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_welcome"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/custom_teal_200"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/mary_shelley"
        android:layout_width="470dp"
        android:layout_height="578dp"
        android:background="@drawable/bgspacewomansm"
        android:scaleType="centerInside"
        android:src="@drawable/gradient_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_navBar_login"
        app:layout_constraintVertical_bias="0.0" />


    <io.github.florent37.shapeofview.shapes.CutCornerView
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/clipCorner"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:elevation="4dp"
        app:shape_cutCorner_bottomRightSize="60dp">

        <!-- YOUR CONTENT -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!-- YOUR CONTENT -->
            <EditText
                android:id="@+id/overlay_view"
                android:paddingTop="2dp"
                android:paddingLeft="8dp"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:backgroundTint="#FFFADC"
                android:ems="10"
                android:hint="Username"
                android:inputType="textPersonName"
                android:textColor="#FFFADC"
                android:textColorHint="#FFFADC"
                app:layout_constraintBottom_toTopOf="@+id/editPassWord"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
                <EditText
                    android:id="@+id/editPassWord"
                    android:paddingTop="2dp"
                    android:paddingLeft="8dp"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="32dp"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:backgroundTint="#FFFADC"
                    android:textColor="#FFFADC"
                    android:textColorHint="#FFFADC"
                    app:layout_constraintBottom_toTopOf="@+id/signin_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/overlay_view" />

            </LinearLayout>

    </io.github.florent37.shapeofview.shapes.CutCornerView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/clipCorner">
    <Button
        android:id="@+id/signin_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:backgroundTint="#000000"
        android:textColor="@color/custom_teal_200"
        android:text="Sign In"
        app:layout_constraintBottom_toTopOf="@+id/password_generator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/password_generator"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/custom_dark"
        android:text="Sign Up"
        android:textColor="@color/lightgray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signin_btn"
        app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>